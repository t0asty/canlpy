{
    "dataset_reader": {
        "type": "multitask_reader",
        "dataset_readers": {
            "entity_linking": {
                "type": "aida_wiki_linking",
                "entity_disambiguation_only": false,
                "entity_indexer": {
                    "type": "characters_tokenizer",
                    "namespace": "entity",
                    "tokenizer": {
                        "type": "word",
                        "word_splitter": {
                            "type": "just_spaces"
                        }
                    }
                },
                "should_remap_span_indices": false,
                "token_indexers": {
                    "tokens": {
                        "type": "bert-pretrained",
                        "do_lowercase": true,
                        "max_pieces": 512,
                        "pretrained_model": "bert-base-uncased",
                        "use_starting_offsets": true
                    }
                }
            },
            "language_modeling": {
                "type": "multiprocess",
                "base_reader": {
                    "type": "bert_pre_training",
                    "lazy": true,
                    "mask_candidate_strategy": "full_mask",
                    "tokenizer_and_candidate_generator": {
                        "type": "bert_tokenizer_and_candidate_generator",
                        "bert_model_type": "bert-base-uncased",
                        "do_lower_case": true,
                        "entity_candidate_generators": {
                            "wiki": {
                                "type": "wiki"
                            }
                        },
                        "entity_indexers": {
                            "wiki": {
                                "type": "characters_tokenizer",
                                "namespace": "entity",
                                "tokenizer": {
                                    "type": "word",
                                    "word_splitter": {
                                        "type": "just_spaces"
                                    }
                                }
                            }
                        }
                    }
                },
                "num_workers": 1
            }
        },
        "datasets_for_vocab_creation": []
    },
    "iterator": {
        "type": "multitask_iterator",
        "iterate_forever": true,
        "iterators": {
            "entity_linking": {
                "iterator": {
                    "type": "cross_sentence_linking",
                    "batch_size": 32,
                    "bert_model_type": "bert-base-uncased",
                    "do_lower_case": true,
                    "entity_indexer": {
                        "type": "characters_tokenizer",
                        "namespace": "entity",
                        "tokenizer": {
                            "type": "word",
                            "word_splitter": {
                                "type": "just_spaces"
                            }
                        }
                    },
                    "id_type": "wiki",
                    "iterate_forever": true,
                    "mask_candidate_strategy": "none",
                    "max_predictions_per_seq": 0,
                    "use_nsp_label": true
                },
                "type": "self_attn_bucket",
                "batch_size_schedule": "base-11gb-fp32"
            },
            "language_modeling": {
                "type": "multiprocess",
                "base_iterator": {
                    "iterator": {
                        "type": "bucket",
                        "batch_size": 32,
                        "max_instances_in_memory": 2500,
                        "sorting_keys": [
                            [
                                "tokens",
                                "num_tokens"
                            ]
                        ]
                    },
                    "type": "self_attn_bucket",
                    "batch_size_schedule": "base-11gb-fp32"
                },
                "num_workers": 1
            }
        },
        "names_to_index": [
            "language_modeling",
            "entity_linking"
        ],
        "sampling_rates": [
            0.8,
            0.2
        ]
    },
    "model": {
        "type": "knowbert",
        "bert_model_name": "bert-base-uncased",
        "soldered_kgs": {
            "wiki": {
                "type": "soldered_kg",
                "entity_linker": {
                    "type": "entity_linking_with_candidate_mentions",
                    "contextual_embedding_dim": 768,
                    "entity_embedding": {
                        "embedding_dim": 300,
                        "pretrained_file": "https://allennlp.s3-us-west-2.amazonaws.com/knowbert/wiki_entity_linking/entities_glove_format.gz",
                        "sparse": false,
                        "trainable": false,
                        "vocab_namespace": "entity"
                    },
                    "span_encoder_config": {
                        "hidden_size": 300,
                        "intermediate_size": 1024,
                        "num_attention_heads": 4,
                        "num_hidden_layers": 1
                    }
                },
                "should_init_kg_to_bert_inverse": false,
                "span_attention_config": {
                    "hidden_size": 300,
                    "intermediate_size": 1024,
                    "num_attention_heads": 4,
                    "num_hidden_layers": 1
                }
            }
        },
        "soldered_layers": {
            "wiki": 9
        }
    },
    "train_data_path": {
        "entity_linking": "https://allennlp.s3-us-west-2.amazonaws.com/knowbert/wiki_entity_linking/aida_train.txt",
        "language_modeling": "/home/matthewp/data/wikipedia_torontobooks_for_bert/*.txt"
    },
    "trainer": {
        "cuda_device": 0,
        "gradient_accumulation_batch_size": 32,
        "learning_rate_scheduler": {
            "type": "slanted_triangular",
            "cut_frac": 0.025,
            "num_epochs": 1,
            "num_steps_per_epoch": 240000
        },
        "model_save_interval": 600,
        "num_epochs": 1,
        "num_serialized_models_to_keep": 2,
        "num_steps_reset_metrics": 5000,
        "optimizer": {
            "type": "bert_adam",
            "lr": 5e-05,
            "max_grad_norm": 1,
            "parameter_groups": [
                [
                    [
                        "pretrained_bert.*embeddings.*LayerNorm",
                        "pretrained_bert.*encoder.layer.[0-9]\\..*LayerNorm",
                        "pretrained_bert.*encoder.layer.[0-9]\\..*bias",
                        "pretrained_bert.*cls.*LayerNorm",
                        "pretrained_bert.*cls.*bias",
                        "pretrained_bert.*pooler.*bias"
                    ],
                    {
                        "lr": 1e-05,
                        "weight_decay": 0
                    }
                ],
                [
                    [
                        "pretrained_bert.*embeddings[^L]+$",
                        "pretrained_bert.*pooler.*weight",
                        "pretrained_bert.*cls[^L]+weight",
                        "pretrained_bert.*encoder.layer.[0-9]\\.[^L]+weight"
                    ],
                    {
                        "lr": 1e-05,
                        "weight_decay": 0.01
                    }
                ],
                [
                    [
                        "pretrained_bert.*encoder.layer.1[0-1].*LayerNorm",
                        "pretrained_bert.*encoder.layer.1[0-1].*bias"
                    ],
                    {
                        "lr": 1e-05,
                        "weight_decay": 0
                    }
                ],
                [
                    [
                        "pretrained_bert.*encoder.layer.1[0-1][^L]+weight"
                    ],
                    {
                        "lr": 1e-05,
                        "weight_decay": 0.01
                    }
                ],
                [
                    [
                        "soldered_kg.*LayerNorm",
                        "soldered_kg.*layer_norm",
                        "soldered_kg.*bias"
                    ],
                    {
                        "weight_decay": 0
                    }
                ]
            ],
            "t_total": -1,
            "weight_decay": 0.01
        },
        "should_log_learning_rate": true
    },
    "vocabulary": {
        "directory_path": "https://allennlp.s3-us-west-2.amazonaws.com/knowbert/wiki_entity_linking/vocabulary_wiki.tar.gz"
    }
}
